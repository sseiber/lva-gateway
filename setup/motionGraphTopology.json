{
    "@apiVersion": "1.0",
    "name": "LvaIotcMotionDetectionWithCvr",
    "properties": {
        "description": "Motion detection graph with cloud recording",
        "parameters": [
            {
                "name": "rtspUrl",
                "type": "String",
                "description": "rtsp Url"
            },
            {
                "name": "rtspAuthUsername",
                "type": "String",
                "description": "rtsp source user name.",
                "default": "username"
            },
            {
                "name": "rtspAuthPassword",
                "type": "String",
                "description": "rtsp source password.",
                "default": "password"
            },
            {
                "name": "assetName",
                "type": "String",
                "description": "name of the AMS CVR asset",
                "default": "motionDetectorAsset"
            },
            {
                "name": "sensitivity",
                "type": "String",
                "description": "motion detection sensitivity",
                "default": "medium"
            },
            {
                "name": "hubSinkOutputName",
                "type": "String",
                "description": "hub sink output name",
                "default": "lvaTelemetry"
            }
        ],
        "sources": [
            {
                "@type": "#Microsoft.Media.MediaGraphRtspSource",
                "name": "rtspSource",
                "endpoint": {
                    "@type": "#Microsoft.Media.MediaGraphClearEndpoint",
                    "url": "${rtspUrl}",
                    "credentials": {
                        "@type": "#Microsoft.Media.MediaGraphUsernamePasswordCredentials",
                        "username": "${rtspAuthUsername}",
                        "password": "${rtspAuthPassword}"
                    }
                }
            }
        ],
        "processors": [
            {
                "@type": "#Microsoft.Media.MediaGraphMotionDetector",
                "name": "md",
                "sensitivity": "${sensitivity}",
                "inputs": [
                    {
                        "moduleName": "rtspSource"
                    }
                ]
            }
        ],
        "sinks": [
            {
                "@type": "#Microsoft.Media.MediaGraphIoTHubMessageSink",
                "name": "hubSink",
                "hubOutputName": "${hubSinkOutputName}",
                "inputs": [
                    {
                        "moduleName": "md"
                    }
                ]
            },
            {
                "@type": "#Microsoft.Media.MediaGraphAssetSink",
                "name": "assetSink",
                "assetNamePattern": "${assetName}",
                "inputs": [
                    {
                        "moduleName": "rtspSource"
                    }
                ]
            }
        ]
    }
}